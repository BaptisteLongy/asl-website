---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const allNews = Object.values(
    import.meta.glob("../news/*.md", { eager: true }),
  );

  const uniqueTags = [
    ...new Set(
      allNews.map((newsItem: any) => newsItem.frontmatter.tags).flat(),
    ),
  ];

  return uniqueTags.map((tag) => {
    let filteredNews = allNews.filter((newsItem: any) =>
      newsItem.frontmatter.tags.includes(tag),
    );
    filteredNews.sort((a, b) => {
      return new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate);
    });
    return {
      params: { tag },
      props: { news: filteredNews },
    };
  });
}

const { tag } = Astro.params;
const { news } = Astro.props;
---

<Layout pageTitle={tag}>
  <h1>Articles tagg√©s {tag}</h1>
  <ul>
    {
      news.map((post: any) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
